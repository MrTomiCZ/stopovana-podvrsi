{
  "rewrites": [
    {
      "source": "/:file*.md",
      "has": [{ "type": "host", "value": ".+" }], 
      "destination": "/:file*.md"
    },
    {
      "source": "/",
      "destination": "/api/render.html"
    },
    {
      "source": "/:path((?!.*\\.md).*)",
      "destination": "/api/render.html?q=:path"
    }
  ]
}
